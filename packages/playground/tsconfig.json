{
	"compileOnSave": false,
	"include": [".", "../lib"],
	"exclude": ["**/core-js"],
	"compilerOptions": {
		"downlevelIteration": true,
		"importHelpers": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2015",
		"typeRoots": ["node_modules/@types"],
		"lib": ["dom"],
		"module": "commonjs",
		"baseUrl": "./"
	}
}
